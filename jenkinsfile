pipeline{
    agent any
    stages{
        stage('code package'){
            steps{
                 script{
                def mvnpath = tool name: 'maven3', type: 'maven'
                sh script: "${mvnpath}/bin/mvn clean package"
                }
            }
        }
        stage('docker compose'){
            steps{
                environment{
                PATH = "$PATH:/usr/local/bin/"
                sh script: 'docker-compose up -d'
                }
            }
        }
    }
}
