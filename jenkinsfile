pipeline{
    agent any
    stages{
        stage('code package'){
            steps{
                 script{
                def mvnpath = tool name: 'maven3', type: 'maven'
                sh script: "${mvnpath}/bin/mvn clean package"
                }
            }
        }
        stage('docker compose'){
            steps{
                script{
                dpath = $path:/usr/local/bin/ 
                sh script: "${dpath}/docker-compose up -d"
                }
            }
        }
    }
}
