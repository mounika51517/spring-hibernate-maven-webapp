pipeline{
    agent any
    environment{
                PATH = "$PATH:/usr/local/bin/"
    }
    stages{
        stage('code package'){
            steps{
                 script{
                def mvnpath = tool name: 'maven3', type: 'maven'
                sh script: "${mvnpath}/bin/mvn clean package"
                }
            }
        }
        stage('docker ssh'){
            steps{
            script{
            def downvar = 'docker-compose down'
            def upvar = 'docker-compose up -d'
            def dir = 'mkdir /opt/db_data'
                sshagent(['docker']) {
                   sh "scp -o StrictHostKeyChecking=no db.sql Dockerfile docker-compose.yml target/SpringHibernateExample-2.4.9.war centos@34.227.79.221:/home/centos"
                   sh "ssh centos@34.227.79.221 ${downvar}"
                   sh "ssh centos@34.227.79.221 ${upvar}"
                   sh "ssh centos@34.227.79.221 ${dir}"
              }  
              }
            }
        }
    }
}
